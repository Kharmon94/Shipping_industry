  <div class="field">
    <%= f.label :drop_off %>
    <%= f.select :drop_off, @locations.map{|x| ["#{x.city}, #{x.state}, x.id"] } %>
  </div>

  
  <div class="actions">
    <%= f.submit %>
  </div>
